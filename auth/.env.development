# 开发环境配置

# 服务器配置
PORT=8101
NODE_ENV=development

# JWT配置
JWT_SYMMETRIC_ENCRYPTION=true
JWT_SECRET_KEY=dev_jwt_secret_key_please_change_in_production
JWT_PUBLIC_KEY=path/to/public.key
JWT_PRIVATE_KEY=path/to/private.key
JWT_EXPIRATION_TIME=60m
JWT_REFRESH_EXPIRATION=7d
JWT_ALGORITHM=RS256
JWT_AUDIENCE=dev-auth-service
JWT_ISSUER=dev-auth-server

# Session配置
SESSION_SECRET=dev_session_secret_key_please_change_in_production
SESSION_EXPIRY=30m
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_COOKIE_PATH=/
SESSION_DOMAIN=localhost

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=auth_service_dev
DB_SYNC=true
DB_LOGGING=true
DB_MIGRATIONS_RUN=true
DB_SSL=false
DB_ENCRYPTION=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=86400
REDIS_TLS=false
REDIS_SENTINEL_ENABLED=false

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW_MS=3600000
LOGIN_RATE_LIMIT_MAX=10
IP_RATE_LIMIT_ENABLED=true
SLIDING_WINDOW_RATE_LIMIT=true

# 安全配置
ENABLE_2FA=false
PASSWORD_SALT_ROUNDS=10
MIN_PASSWORD_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90
PASSWORD_HISTORY_COUNT=5
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=15m
ACCOUNT_IDLE_LOCK_DAYS=90
CORS_ORIGINS=http://localhost:3000,http://localhost:8101
HELMET_ENABLED=true
STRICT_TRANSPORT_SECURITY=false
XSS_PROTECTION=true
CONTENT_TYPE_OPTIONS=true
FRAME_OPTIONS=DENY

# Swagger配置
SWAGGER_ENABLED=true
SWAGGER_TITLE=NestJS Auth API (Dev)
SWAGGER_DESCRIPTION=认证系统 API 文档 - 开发环境
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# 加密与证书
DATA_ENCRYPTION_KEY=dev_data_encryption_key_please_change_in_production
SSL_KEY_PATH=/path/to/ssl.key
SSL_CERT_PATH=/path/to/ssl.cert
HTTPS_ENABLED=false

# OAuth配置
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_CALLBACK_URL=http://localhost:8101/auth/google/callback

OAUTH_GITHUB_ENABLED=false
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_GITHUB_CALLBACK_URL=http://localhost:8101/auth/github/callback

# SMTP配置（用于邮件通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Auth Service (Dev)
EMAIL_TEMPLATES_DIR=./templates/email

# 日志配置
LOG_FORMAT=dev
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_CONSOLE_ENABLED=true
LOG_ROTATION_ENABLED=true
SECURITY_EVENTS_LOG=true
AUDIT_LOG_ENABLED=true 